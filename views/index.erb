<h1>Places We've Been</h1>
    <div class="row">
      <div class="col-md-5">
      <h2>Leah:</h2>

      <ul>
        <% @leah_places.each() do |place| %>
          <li><%= place.name() %></li>
        <% end %>
      </ul>

      <p>Add a new place:</p>

      <form action="/leah_places" method="post">
        <label for="leah_name">Place name</label>
        <input id="leah_name" name="leah_name" type="text">

        <button type="submit">Add place</button>
      </form>
      </div>

